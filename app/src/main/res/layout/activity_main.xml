<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Image name"

        />

    <EditText
        android:id="@+id/edit_Description_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name_text"
        android:ems="10"
        android:hint="enter quantity"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/image_edit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/edit_Description_field"

        android:layout_marginTop="5dp"
        android:onClick="chooseImage"
        android:scaleType="centerCrop"
        android:src="@drawable/mood"></ImageView>

    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_edit"
        android:layout_marginTop="68dp"
        android:onClick="storeImage"
        android:text="Save Image" />

    <Button
        android:id="@+id/movebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_edit"
        android:onClick="movetoshowactivty"
        android:text="move to show" />



</RelativeLayout>