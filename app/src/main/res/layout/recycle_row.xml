<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="199dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="406dp"
            android:layout_height="167dp">

            <ImageView
                android:id="@+id/Image_in_card"
                android:layout_width="118dp"
                android:layout_height="94dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="46dp"
                android:src="@drawable/mood"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Description_in_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/name_in_card"
                android:layout_width="116dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="157dp"
                android:layout_marginBottom="13dp"
                android:text="TextView"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/Description_in_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/Image_in_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/Description_in_card"
                android:layout_width="111dp"
                android:layout_height="53dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="TextView"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/edit_product_price"
                app:layout_constraintStart_toEndOf="@+id/Image_in_card"
                app:layout_constraintTop_toBottomOf="@+id/name_in_card" />

            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_width="51dp"
                android:layout_height="43dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="78dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edit_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:drawable/ic_menu_delete" />

            <ImageButton
                android:id="@+id/edit_btn"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toTopOf="@+id/Description_in_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.684"
                app:layout_constraintStart_toEndOf="@+id/Description_in_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/view_btn"
                android:layout_width="46dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="108dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/Description_in_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/name_in_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.666"

                app:srcCompat="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/edit_product_price"
                android:layout_width="108dp"
                android:layout_height="32dp"
                android:layout_marginStart="136dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="162dp"
                android:layout_marginBottom="6dp"
                android:text="price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Description_in_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>